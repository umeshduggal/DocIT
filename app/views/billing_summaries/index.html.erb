<% if current_user.has_role? :intended_recipient %>
  <h2>Billing Summary details for <%= current_user.parent.name %>, <%= current_user.parent.practice_name %></h2>
<% else %>
  <h2>Billing Summary details for <%= current_user.name %>, <%= current_user.practice_name %></h2>
<% end %>


<table class="table table-hover table-condensed table-bordered table-striped">
  
  <thead>
    <tr>
      <th>Billing Date</th>
      <th>Total Billable Amount ($)</th>
      <th>Total Call Duration (HH:MM:SS)</th>
      </tr>
  </thead>

  <tbody>
    
    <% @billing_summaries.each do |call_log|
        t = call_log.total_duration.to_i
        mm, ss = t.divmod(60)            #=> [4515, 21]
        hh, mm = mm.divmod(60)
    %>
      <tr>
        <td><%= call_log.created_at.strftime("%Y-%m-%d %H:%M:%S") rescue nil %></td>
        <td><%= call_log.total_ammount %></td>
        <td><%=  "%02d : %02d : %02d" % [hh, mm, ss]%></td>
    <% end %>
       <%= will_paginate @billing_summaries unless @billing_summaries.blank? %>
  </tbody>
</table>

